@model Pgpg.Web.Models.Account.VerifySecurityCodeViewModel
@section Scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Account/VerifySecurityCode.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Account/VerifySecurityCode.min.js" asp-append-version="true"></script>
    </environment>
}
<form class="verify-security-code-form" asp-action="VerifySecurityCode" method="post">

    <h3>@L("VerifySecurityCode")</h3>
    <p>@L("VerifySecurityCode_Information")</p>

    @Html.Hidden("returnUrl", Model.ReturnUrl)
    @Html.Hidden("provider", Model.Provider)
    @Html.Hidden("rememberMe", Model.RememberMe)

    <div class="form-group">
        @Html.LabelFor(m => m.Code)
        @Html.TextBoxFor(m => m.Code, new { @class = "form-control", required = "required" })
    </div>

    @if (Model.IsRememberBrowserEnabled)
    {
        <div class="form-group">
            <div class="mt-checkbox-list">
                <label class="mt-checkbox mt-checkbox-outline">
                    @Html.CheckBoxFor(m => m.RememberBrowser, new { @class = "form-control" }) @L("RememberThisBrowser")
                    <span></span>
                </label>
            </div>
        </div>
    }

    <div class="form-actions">
        <input type="submit" class="btn btn-success uppercase pull-right" value="@L("Submit")" />
    </div>

</form>