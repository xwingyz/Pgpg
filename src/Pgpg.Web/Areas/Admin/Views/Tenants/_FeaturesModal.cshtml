@using Pgpg.Web.Areas.Admin.Models.Common.Modals
@using Pgpg.Web.Areas.Admin.Models.Tenants
@model TenantFeaturesEditViewModel


@Html.Partial("~/Areas/Admin/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Features") + " - " + Model.Tenant.Name))

<div class="modal-body">
    @Html.Partial("~/Areas/Admin/Views/Common/_FeaturesTree.cshtml", Model)
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default pull-left reset-features-button" data-toggle="tooltip" title="@L("ResetFeaturesTooltip")" data-placement="top"><span>@L("ResetSpecialFeatures")</span></button>
    <button type="button" class="btn default close-button" data-dismiss="modal">@L("Cancel")</button>
    <button type="button" class="btn blue save-button"><i class="fa fa-save"></i> <span>@L("Save")</span></button>
</div>

